# Configuration de la base de données
# Copiez ce fichier en .env et remplissez avec vos valeurs de production

# Type de base de données (mysql, sqlite, etc.)
DB_TYPE=mysql

# Hôte de la base de données
# Pour XAMPP local : 127.0.0.1
# Pour AlwaysData : mysql-yeadonaye.alwaysdata.net
DB_HOST=127.0.0.1

# Port de la base de données (généralement 3306 pour MySQL)
DB_PORT=3306

# Nom de la base de données
# Pour XAMPP local : gestion_joueurs
# Pour AlwaysData : yeadonaye_bd_gestion_equipe
DB_NAME=gestion_joueurs

# Nom d'utilisateur de la base de données
# Pour XAMPP local : root
# Pour AlwaysData : yeadonaye
DB_USER=root

# Mot de passe de la base de données
# Pour XAMPP local : (vide)
# Pour AlwaysData : votre mot de passe
DB_PASS=

# Charset de la base de données
DB_CHARSET=utf8mb4
